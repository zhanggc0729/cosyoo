/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.top{
  align-items: center;
  text-align: center;
  width:100%;
  height:300px;
  background-color:#5097ce;
}
.top_month{
  margin-top: 10px;
   line-height:  20px;
  align-items: center;
  height: 20px;
}
.editImage{
  width: 20px ;
  height:20px;
  vertical-align:middle;
}
.balanceStyle{
  color:#b2ea96;
  font-size:40px;
  font-weight:bold;
}
.showBalance{
padding-top:10px;
}
.shade{
  background:rgba(204, 206, 209,0.4);
  width:100%;
  height:100%;
  z-index: 100;
  position:absolute;
  top:0px;
}
.pop_edit{
  border-radius:10px;
  position:absolute;
  width:60%;
  height:45%;
  display: block;
  background: #fff;
  left: 20%;
  top:20%;
  
}
.close_img_position{
  float: right;
  width:25px;
  height: 25px;
  margin-right:10px;
  margin-top:10px;
}
.close_tag{
  height:10%;
}
.pop_top_info{
  height:10%;
  font-size: 12px;
  text-align: center;
  padding-top: 8%;
}
.pop_balance{
  height:25%;
  font-size: 40px;
  line-height: 40px;
  text-align: center;
  padding-top: 15%;
  color:#b2ea96;
}
.pop_balance input{
  height:45px;
}
.pop_button{
  height:10%;
  padding-top: 3%;
}
.button_style{
  width: 80%;
  background: #6197c2;
  color:#fff;
  font-weight: bold;
}
.pop_bottom_info{
  padding-top: 6%;
  
  text-align: center;
}
.pop_bottom_info text{
 font-size: 9px;
 color:#a3a3a4;
 width:70%;
  left:15%;
  line-height: 1px;
}

.date_picker{
  display: inline-block;
  vertical-align:middle;
  padding-left: 10px;
  color:#fff;
}
.timeSelect{
  line-height: 20px;
  padding-top:5%;
}
.in_out_balance{
  color:#fff;
  padding-top:10px;
}
.in_balance{
  float: left;
  width:45%;
}
.out_balance{
  float: left;
  width:45%;
}
.middle_balance{
  float: left;
  padding:0 10px;
  padding-top:4px;
}
.middle_balance image{
 width:1px;
  height: 40px;
}
.in_balance_text{
  padding-top:3px;
  text-align: right;
}

.out_balance_text{
  text-align: left;
  padding-top:3px;
}
.menuFoot{
  position: fixed;
  bottom: 10px;
  width:100%;
  height: 15%;
  text-align: center;
}
.menuFoot_left{
 width: 40%;
 margin-top:10%;
  background: #dff1ff;
   height: 100%;
}
.menuFoot_midd{
   background: #dff1ff;
width: 20%;
 height: 100%;
 margin-top:20px;
 border-top-left-radius: 50%;
 border-top-right-radius: 50%;
}
.menuFoot_midd image{
  padding-top:27%;
   width:45px;
  height: 45px;
}
.menuFoot_right{
   background: #dff1ff;
width: 40%;
 margin-top:10%;
  height: 100%;
}
.menuFoot_txt{
  color: #08799b;
}
.menuFoot_icon image{
   width:25px;
  height: 25px;
  padding-top:5px;
}